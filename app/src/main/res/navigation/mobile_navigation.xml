<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.arslanovic.justdrink.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.arslanovic.justdrink.ui.dashboard.DashboardFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.arslanovic.justdrink.ui.notifications.NotificationsFragment"
        android:label="@string/title_liked"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.arslanovic.justdrink.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/history_fragment" />
</navigation>